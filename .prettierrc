{
    "singleQuote": true,
    "semi": true,
    "trailingComma": "all",
    "trailingCommaPHP": true,
    "phpVersion": "8.1",
    "plugins": ["@prettier/plugin-php", "@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.php"],
            "options": {
                "parser": "php",
                "tabWidth": 4
            }
        }
    ]
}
